<%= simple_form_for(@waiting_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.select :days, [[t('both_days_long'), 'both_days'],
                         [t('only_saturday'), 'saturday'],
                         [t('only_sunday'), 'sunday']
                      ], include_blank: false %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.select :gender, [
                                [t('male'), 'male'],
                                [t('female'), 'female'],
                        ] %>
    <%= f.input :city %>
    <%= f.input :phone %>
    <%= f.input :fellowship %>
    <%= f.association :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
