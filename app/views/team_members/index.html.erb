<%= render 'dashboard/admin_navbar' %>

<h1>Team Members (<%= TeamMember.count %>)</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Accommodation on venue</th>
      <th>Pts</th>
      <th>Jesus hotel staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= team_member.first_name %></td>
        <td><%= team_member.last_name %></td>
        <td><%= team_member.email %></td>
        <td><%= team_member.phone %></td>
        <td><%= yes_no(team_member.accommodation) %></td>
        <td><%= yes_no(team_member.pts) %></td>
        <td><%= yes_no(team_member.jesus_hotel_staff) %></td>
        <td><%= link_to 'Show', team_member %></td>
        <td><%= link_to 'Edit', edit_team_member_path(team_member) %></td>
        <td><%= link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team Member', new_team_member_path %>
