<%= simple_form_for(@donate) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.submit t('simple_form.labels.donate.new.submit'), class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
