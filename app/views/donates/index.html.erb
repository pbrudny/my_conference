<p id="notice"><%= notice %></p>

<h1>Donates</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Received</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donates.each do |donate| %>
      <tr>
        <td><%= donate.amount %></td>
        <td><%= donate.email %></td>
        <td><%= donate.first_name %></td>
        <td><%= donate.last_name %></td>
        <td><%= donate.received %></td>
        <td><%= link_to 'Show', donate %></td>
        <td><%= link_to 'Edit', edit_donate_path(donate) %></td>
        <td><%= link_to 'Destroy', donate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donate', new_donate_path %>
