<%= render 'dashboard/admin_navbar' %>

<p id="notice"><%= notice %></p>

<h1>Pytania</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Pytanie</th>
      <th>Odpowiedź</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.body %></td>
        <td><%= question.answer %></td>
        <td><%= link_to t('show'), question %></td>
        <td><%= link_to t('edit'), edit_question_path(question) %></td>
        <td><%= link_to t('destroy'), question, method: :delete, data: { confirm: 'Na pewno chcesz usunąć?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowe pytanie', new_question_path %>
