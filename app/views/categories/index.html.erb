<%= render 'dashboard/admin_navbar' %>

<h1>Kategorie użytkowników</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to t('show'), category %></td>
        <td><%= link_to t('edit'), edit_category_path(category) %></td>
        <td><%= link_to t('destroy'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowa kategoria', new_category_path %>
