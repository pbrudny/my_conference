<h1><%= t('registered')%> (<%= User.count + User.total_companions %>)</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@q, :firt_name, t('first_name')) %></th>
      <th><%= sort_link(@q, :last_name, t('last_name')) %></th>
      <th><%= sort_link(@q, :email, t('email')) %></th>
      <th><%= sort_link(@q, :city, t('city')) %></th>
      <th><%= sort_link(@q, :phone, t('phone')) %></th>
      <th><%= sort_link(@q, :fellowship, t('fellowship')) %></th>
      <th><%= sort_link(@q, :companions, t('companions')) %></th>
      <th><%= sort_link(@q, :first_time, t('first_time')) %></th>
      <th><%= t('donation') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.city %></td>
        <td><%= user.phone %></td>
        <td><%= user.fellowship %></td>
        <td><%= user.companions %></td>
        <td><%= yes_no(user.first_time) %></td>
        <td><%= link_to 'WpÅ‚ata', user.donate %></td>
        <td><%= link_to t('show'), user %></td>
        <td><%= link_to t('edit'), edit_user_path(user) %></td>
        <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @users %>

<%= link_to t('add_user'), new_user_path %>
