<h1><%= t('registered')%> (<%= User.count %>)</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('first_name') %></th>
      <th><%= t('last_name') %></th>
      <th><%= t('email') %></th>
      <th><%= t('phone') %></th>
      <th><%= t('fellowship') %></th>
      <th><%= t('first_time') %></th>
      <th><%= t('donation') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.fellowship %></td>
        <td><%= checked(user.first_time) %></td>
        <td><%= link_to 'WpÅ‚ata', user.donate %></td>
        <td><%= link_to t('show'), user %></td>
        <td><%= link_to t('edit'), edit_user_path(user) %></td>
        <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @users %>

<%= link_to t('add_user'), new_user_path %>
