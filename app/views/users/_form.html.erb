<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :fellowship %>
    <%= f.input :first_time %>
  </div>

  <div class="form-actions">
    <%= f.submit t('simple_form.labels.user.new.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
