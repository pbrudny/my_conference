<h1><%= t('user.header.add') %> (zosta≈Ço <%= User.total_available %> miejsc)</h1>

<%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :companions, input_html: { value: 0, maxlength: 2 } %>
      <%= f.input :city %>
      <%= f.input :phone %>
      <%= f.input :fellowship %>
      <%= f.input :first_time %>
      <%= hidden_field_tag :token, @token %>
    </div>

    <div class="form-actions">
      <%= f.submit t('simple_form.labels.user.new.submit'), class: 'btn btn-primary btn-lg' %>
    </div>
<% end %>
<hr>
<%= link_to t('user.back'), static_pages_main_path %>
